.chapter .note {
  &.bringhome {
    #content>#note>.style('bring-it-home'; chapter);

    > .title { #content>#note>#title>.style('bring-it-home'; chapter); }
  }
  &.clearup  {
    #content>#note>.style('clear-it-up'; chapter);
  }
  &.workout {
    #content>#note>.style('work-it-out'; chapter);

    // Supress the extra url generated from base that is wrapped with parentheses
    .itemizedlist > .listitem .link.only-show-once {
      content: content();
    }
  }
  &.linkup {
    #content>#note>.style('link-it-up'; chapter);

    img {   //center qr code
      display: block;
      margin: auto;
    }

    .link {
      color: @dark-blue;
      font-weight: normal;
    }
  }
  // Manual Chapter Objectives Note Utilized 
  // as Introduction Header as well in Economics
  &.chapter-objectives {
    #content>#note>.style('chapter-objectives'; introduction);

    > .title {
      font-size: x-large;
      font-weight: bold;
      color: @dark-blue;
      // Border must be removed from title due to Precalculus thinking this is generic
      // note.  Since manual chapter objectives must be a note, we must keep Precalc at bay.
      border: none;
      padding-left: 0;
    }

    ul.itemizedlist > .listitem {
      #content>#list>.item(any; introduction; note; 'chapter-objectives');
    }
  }
}

.preface {
  .section { #content>#section>.style(any; preface); }
  .table table { #content>#table>.style(any; preface); }
  .table table td { #content>#table>#data>.style(any; preface); }
}

// Move this into a parent book, or 
// book-cnxml.less when phase 2 of refactoring
// is complete. (this is part of removing #heading).
.section .titlepage div > div > h2 {
  #content>#section>#title>.style(any; any);

  .cnx-gentext-n, &::before { #content>#section>#title>.number(); }
  .cnx-gentext-t::before { #content>#section>#title>.divider(); }
  .cnx-gentext-t { #content>#section>#title>.text(); }
}